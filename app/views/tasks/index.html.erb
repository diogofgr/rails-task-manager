<h1>Tasks#index</h1>
<p><%= link_to 'New task', new_task_path %></p>

<ol>
<% @tasks.each do |task| %>
  <li>
    <%= task.done ? "[x]" : "[ ]" %>
    <%= task.description %>
    <%= link_to 'Show details', task_path(id: task.id) %>
    <%= link_to 'Edit task', edit_task_path(id: task.id) %>
    <%= link_to 'Delete task', task_path(id: task.id, method: :delete) %>
    </li>
<% end %>
</ol>

